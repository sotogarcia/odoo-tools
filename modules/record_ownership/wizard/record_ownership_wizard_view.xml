<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data noupdate="0">

    <record id="view_record_ownership_wizard" model="ir.ui.view">
      <field name="name">record.ownership.wizard.form</field>
      <field name="model">record.ownership.wizard</field>
      <field name="priority" eval="16"/>
      <field name="active" eval="True"/>
      <field name="arch" type="xml">
        <form string="Ownership Wizard">
          <sheet>
            <field name="model_id" invisible="1"/>

            <header>
              <button name="perform_action"
                      string="Change"
                      type="object"
                      class="btn-primary">
                <attribute name="confirm">Are you sure you want to apply the changes?</attribute>
                <attribute name="help">Apply changes</attribute>
              </button>
            </header>

            <group>
              <field name="change_owner" class="oe_field_change_owner"/>
              <field name="owner_id"
                     class="oe_field_owner_id"
                     colspan="4"
                     options="{'no_quick_create': True, 'no_create': True, 'no_open': True}">
                <attribute name="readonly">[('change_owner','!=', True)]</attribute>
              </field>

              <field name="change_subrogate" class="oe_field_change_subrogate"/>
              <field name="subrogate_id"
                     class="oe_field_subrogate_id"
                     colspan="4"
                     options="{'no_quick_create': True, 'no_create': True, 'no_open': True}">
                <attribute name="readonly">[('change_subrogate','!=', True)]</attribute>
              </field>

              <separator/>
              <field name="record_count" class="oe_field_record_count"/>
              <field name="target_count" class="oe_field_target_count"/>
              <separator/>

              <field name="tracking_disable" class="oe_field_tracking_disable"/>
              <field name="fix_redundancy" class="oe_field_fix_redundancy" colspan="4"/>
            </group>

          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>
