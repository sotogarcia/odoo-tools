<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Moodle Page"
        
            - Model·········: moodle.api.client.forum
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: moodle_api_client.menu_moodle_api_client_content
            - View priority·: 16    Sequence····: 10
            - Action help···: There is not any moodle forum yet
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
        
        <!-- Tree view for "moodle.api.client.forum" -->
        <record id="view_moodle_api_client_forum_tree" model="ir.ui.view">
            <field name="name">view.moodle.api.client.forum.tree</field>
            <field name="model">moodle.api.client.forum</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="moodle_api_client_forum_tree" create="1" delete="1" edit="1">
                    <field name="active" invisible="1" />
                    <field name="name" class="oe_field_name" />
                    <field name="platform_id" class="oe_field_platform_id" optional="show" />
                    <field name="user_id" class="oe_field_user_id" optional="show" />
                    <field name="course_id" class="oe_field_course_id" optional="show" />
                    <field name="moodleid" class="oe_field_moodleid" optional="hide" />
                    <field name="description" class="oe_field_description" optional="hide" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "moodle.api.client.forum" -->
        <record id="view_moodle_api_client_forum_form" model="ir.ui.view">
            <field name="name">view.moodle.api.client.forum.form</field>
            <field name="model">moodle.api.client.forum</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="moodle_api_client_forum_form" create="1" delete="1" edit="1">
                    <field name="active" invisible="1" />

<!--                     <header>
                        <strong>Moodle:</strong>
                    </header>
 -->

                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="view_discussions" type="object" class="oe_stat_button oe_read_only" 
                                icon="fa-icon" help="List all available forum discussions">
                                <field name="discussion_count" widget="statinfo" string="Discussions" />
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_field_name" />
                            </h1>
                        </div>

                        <group col="4">
                            <field name="platform_id" class="oe_field_platform_id" />
                            <field name="user_id" class="oe_field_user_id" />
                            <field name="moodleid" class="oe_field_moodleid" />
                            <field name="course_id" class="oe_field_course_id" />
                        </group>

                        <notebook>
                            <page string="Setup" class="oe_forum_setup" accesskey="S">
                                <group col="2" string="Description" class="w-100">
                                    <field name="description" class="oe_field_description w-100" colspan="2" nolabel="1" />
                                </group>
                            </page>
                        </notebook>

                    </sheet>

                    <!-- Chatter: begin -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                    <!-- Chatter: end -->

                </form>
            </field>
        </record>
        
        <!-- Search view for "moodle.api.client.forum" -->
        <record id="view_moodle_api_client_forum_search" model="ir.ui.view">
            <field name="name">view.moodle.api.client.forum.search</field>
            <field name="model">moodle.api.client.forum</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="moodle_api_client_forum_search">
                    <field name="name" />
                    <field name="platform_id" />
                    <field name="user_id" />
                    <field name="course_id" />
                    <field name="moodleid" />

                    <filter string="Linked to Moodle"
                        name="linked_to_moodle"
                        domain="[('moodleid', '&lt;&gt;', False)]"
                        context="{}"
                        help="Show records already linked to a Moodle forum" />

                    <filter string="Not linked to Moodle"
                        name="not_linked_to_moodle"
                        domain="[('moodleid', '=', False)]"
                        context="{}"
                        help="Show records not yet linked to any Moodle forum" />

                    <separator />
                    <filter string="Group by platform"
                        name="group_by_platform_id"
                        domain="[]"
                        context="{'group_by': 'platform_id'}"
                        help="Group records based on their related Moodle platform ID" />

                    <filter string="Group by user"
                        name="group_by_user_id"
                        domain="[]"
                        context="{'group_by': 'user_id'}"
                        help="Group records based on their related author ID" />

                    <filter string="Group by course"
                        name="group_by_course_id"
                        domain="[]"
                        context="{'group_by': 'course_id'}"
                        help="Group records based on their related course ID" />

                    <separator />
                    <filter name="inactive" string="Archived" 
                        domain="[('active','=',False)]"
                        help="Filter to show records marked as inactive."/>
                </search>

            </field>
        </record>
        
        <!-- Main window action for model.name -->
        <record id="action_moodle_forum_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Forums</field>
            <field name="res_model">moodle.api.client.forum</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_moodle_api_client_forum_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new moodle forum
                </p><p>
                    There is not any moodle forum yet
                </p>
            </field>
        </record>
        
        <!-- Main menu for model.name -->
        <record id="menu_moodle_forum" model="ir.ui.menu" >
            <field name="name">Forum</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_moodle_forum_act_window" />
            <field name="parent_id" ref="moodle_api_client.menu_moodle_api_client_content" />
        </record>

    </data>
</openerp>
