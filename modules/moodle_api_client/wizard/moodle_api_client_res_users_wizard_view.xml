<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="view_moodle_api_client_res_users_wizard_wizard" model="ir.ui.view">
            <field name="name">Moodle User Credentials Wizard</field>
            <field name="model">moodle.api.client.res.users.wizard</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Moodle User Credentials Wizard" create="0" delete="0" edit="1">
        
                    <header>
                        <button name="perform_action" string="Save" type="object" class="btn btn-primary" />
                    </header>
        
                    <group col="4">
                        <field name="user_id" class="oe_field_user_id" force_save="1" 
                            attrs="{'readonly': [('user_id', '!=', False)]}" />
                        <separator colspan="2" />

                        <field name="moodle_user_id" class="oe_field_moodle_user_id" />
                        <field name="moodle_api_token" class="oe_field_moodle_api_token" />
                    </group>
        
                    <footer />
        
                </form>
            </field>
        </record>
        
        <record id="action_moodle_api_client_res_users_wizard_wizard_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Moodle Credentials</field>
            <field name="res_model">moodle.api.client.res.users.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="binding_model_id" ref="model_res_users"/>
            <field name="binding_type">action</field>
            <field name="binding_view_types">form</field>
        </record>

    </data>
</openerp>
