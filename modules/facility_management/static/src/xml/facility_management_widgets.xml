<?xml version="1.0" encoding="UTF-8"?>

<templates id="facility_management_widgets" xml:space="preserve">

    <t t-name="next_time_value">
        <div class="d-flex flex-row justify-content-start align-items-center">
            <i t-attf-class="fa {{DateTimeIcon}}" aria-hidden="false"></i>
            <span class="ml-2" t-if="DateTimeStr" t-attf-title="Current or next reservation ({{DateTimeValue}})"><t t-raw="DateTimeStr"/></span>
        </div>
    </t>

    <t t-name="facility_users">
        <div class="d-flex flex-row justify-content-start align-items-center" t-if="UsersValue">
            <i t-attf-class="fa {{UsersIcon}}" aria-hidden="false"></i>
            <span class="ml-2"><t t-raw="UsersValue"/></span>
        </div>
    </t>

</templates>

