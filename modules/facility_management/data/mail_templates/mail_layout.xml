<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <!-- Reusable email layout -->
  <template id="email_layout" name="Email Layout">
    <t t-name="facility_management.email_layout">
      <!-- EMAIL::Begin -->
      <table border="0" cellpadding="0" cellspacing="0"
             style="padding-top:16px;background-color:#F1F1F1;
                    font-family:Verdana,Arial,sans-serif;color:#454748;
                    width:100%;border-collapse:separate;">
        <tr>
          <td align="center">
            <!-- CONTENT::Begin -->
            <table border="0" cellpadding="0" cellspacing="0" width="590"
                   style="padding:16px;background-color:white;color:#454748;
                          border-collapse:separate;">
              <tbody>

                <!-- CONTENT-HEADER::Begin -->
                <tr>
                  <td align="center" style="min-width:590px;">
                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                           style="min-width:590px;background-color:white;
                                  padding:0 8px;border-collapse:separate;">
                      <tr>
                        <td valign="middle">
                          <span style="font-size:10px;">
                            <t t-esc="subtitle or ''"/>
                          </span>
                          <br/>
                          <span style="font-size:20px;font-weight:bold;">
                            <t t-esc="title or ''"/>
                          </span>
                        </td>
                        <td valign="middle" align="right">
                          <img t-att-src="logo_src or '/logo.png?company='"
                               style="padding:0;margin:0;height:auto;width:80px;"
                               alt=""/>
                        </td>
                      </tr>
                      <tr>
                        <td colspan="2" style="text-align:center;">
                          <hr width="100%"
                              style="background-color:#CCC;border:none;clear:both;
                                     display:block;font-size:0;min-height:1px;
                                     line-height:0;margin:16px 0;"/>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <!-- CONTENT-HEADER::End -->

                <!-- CONTENT-BODY::Begin -->
                <tr>
                  <td align="center" style="min-width:590px;">
                    <t t-raw="body_html"/>
                  </td>
                </tr>
                <!-- CONTENT-BODY::End -->

                <!-- CONTENT-FOOTER::Begin -->
                <tr>
                  <td align="center" style="min-width:590px;">
                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                           style="min-width:590px;background-color:white;
                                  font-size:11px;padding:0 8px;border-collapse:separate;">
                      <tr><td valign="middle" align="left"/></tr>
                      <tr>
                        <td valign="middle" align="left" style="opacity:0.7;">
                          <t t-if="user and user.company_id and user.company_id.phone">
                            <t t-esc="user.company_id.phone"/>
                          </t>
                          <t t-if="user and user.company_id and user.company_id.email">
                            &#160;|&#160;
                            <a t-att-href="'mailto:%s' % user.company_id.email"
                               style="text-decoration:none;color:#454748;">
                              <t t-esc="user.company_id.email"/>
                            </a>
                          </t>
                          <t t-if="user and user.company_id and user.company_id.website">
                            &#160;|&#160;
                            <a t-att-href="user.company_id.website"
                               style="text-decoration:none;color:#454748;">
                              <t t-esc="user.company_id.website"/>
                            </a>
                          </t>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <!-- CONTENT-FOOTER::End -->

              </tbody>
            </table>
            <!-- CONTENT::End -->
          </td>
        </tr>
      </table>
      <!-- EMAIL::End -->
    </t>
  </template>

</odoo>
